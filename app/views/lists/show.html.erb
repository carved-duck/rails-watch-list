<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Movie Reviews: <%= @list.name %></h1>
    <%= link_to lists_path, class: "btn btn-outline-secondary" do %>
      <i class="fa-solid fa-arrow-left me-2"></i>
      Back to all lists
    <% end %>
  </div>
  <div class="d-grid mb-4">
    <%= link_to "Add a Bookmark", new_list_bookmark_path(@list), class: "btn btn-primary btn-lg" %>
  </div>
  <% if @list.bookmarks.any? %>
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <%= image_tag bookmark.movie.poster_url, class: "card-img-top", alt: bookmark.movie.title %>
            <div class="card-body d-flex flex-column">
              <h2 class="card-title"><%= bookmark.movie.title %></h2>
              <p><%= bookmark.movie.overview %></p>
              <p class="card-text flex-grow-1"><strong><%= bookmark.comment %></strong></p>
              <div class="mt-3 text-end">
                <%= link_to "Delete", bookmark_path(bookmark),
                  method: :delete, data: { confirm: "Really delete this bookmark?" },
                  class: "btn btn-sm btn-danger" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">No bookmarks yet.</p>
  <% end %>
</div>
