<div class="container my-5">
  <div class="luigi d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
    <%= link_to lists_path, class: "btn btn-outline-secondary" do %>
      <i class="fa-solid fa-arrow-left me-2"></i> Back to all lists
    <% end %>
    <h1 class="m-0 text-center text-md-start">Movie Reviews: <%= @list.name %></h1>
    <%= link_to "Add a Movie", new_list_bookmark_path(@list), class: "btn btn-primary btn-lg" %>
  </div>
  <% if @list.bookmarks.any? %>
    <div class="row g-4">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="col-12 col-md-6">
          <div class="card-movie ">
            <div class="">
              <%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title %>
              <%#= bookmark.movie.rating%>
            </div>
            <div class="card-body d-flex flex-column px-4">
              <h2 class="card-title"><%= bookmark.movie.title %></h2>
              <p class="text-muted mb-2 overview"><%= bookmark.movie.overview.truncate(100) %></p>
              <p class="card-text mb-2"><strong><%= bookmark.comment %></strong></p>
              <div class="mt-auto text-end">
                <%= link_to "Delete", bookmark_path(bookmark),
                  method: :delete, data: { confirm: "Really delete this bookmark?" },
                  class: "btn btn-sm btn-danger" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">No bookmarks yet.</p>
  <% end %>
</div>
