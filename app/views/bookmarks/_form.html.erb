<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :comment, prompt: "Must be more than 6 characters" %>
  <%= f.association :movie %>
  <div class="mb-3">
    <label class="form-label">Your Rating</label>
    <div>
      <% (1..5).each do |number| %>
        <%= f.radio_button :rating, number, id: "rating_#{number}" %>
        <%= f.label :rating, ("â˜…" * number), for: "rating_#{number}",
                  class: "me-2 star-label" %>
      <% end %>
    </div>
    <%= f.error :rating %>
  </div>
  <%= f.button :submit, class: "btn btn-primary mt-3" %>
<% end %>
